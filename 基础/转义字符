package text;

public class Text 
{
	public static void main(String[] arg) 
	{
		// \t: 一个制表位，实现对齐功能
		System.out.println("hello\twolrd"); //hello	wolrd
		// \n： 换行
		System.out.println("hello\nwolrd"); //hello
		                                    //wolrd
		// \\： 输出一个\
		System.out.println("C:\\Program Files (x86)\\Windows Defender\\fr-FR");//C:\Program Files (x86)\Windows Defender\fr-FR
		// \": 输出一个"
		System.out.println("\"hellowolrd\"");//"hellowolrd"
		// \r：将/r后面的字符替换\r前的字符
		System.out.print("hello\rwolrd\n");//world 注意 这边输出用的print 
		System.out.print("hello\rwolrd");//hello
		                                 //world  注意 这边输出用的println 
	}
}
